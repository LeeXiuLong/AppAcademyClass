<table border="1|0">
    <thead>
        <tr>
            <th colspan = "2"><%= @cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Age</td>
            <td><%= @cat.age %></td>
        </tr>
        <tr>
            <td>Color</td>
            <td><%= @cat.color %></td>
        </tr>
        <tr>
            <td>Sex</td>
            <td><%= @cat.sex == "M" ? "Male" : "Female" %></td>
        </tr>
        <tr>
            <td>Description</td>
            <td><%= @cat.description %></td>
        </tr>
    </tbody>
</table>

<a href= <%= edit_cat_url(@cat.id)%>> edit </a>
<form action = <%=cat_url(@cat.id)%> method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value = "delete">
</form>